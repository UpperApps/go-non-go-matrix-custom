{
  "compilerOptions": {
    "module": "nodenext",
    "noImplicitAny": true,
    "outDir": "./build",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "./server.ts"
  ]
}