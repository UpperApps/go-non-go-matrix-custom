{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "./build",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*", "./server.ts", "./babel.config.cts", "./jest.config.cts", "./lint-staged.cjs"]
}
