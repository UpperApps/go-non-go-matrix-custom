{
  "root": true,
  "env": {
    "node": true,
    "commonjs": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@shopify/esnext",
    "plugin:@shopify/typescript",
    "plugin:@shopify/prettier",
    "plugin:@shopify/typescript-type-checking"
  ],
  "rules": {
    "no-console": 1,
    "prettier/prettier": 2,
    "no-process-env": "off",
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {}
    }
  }
}